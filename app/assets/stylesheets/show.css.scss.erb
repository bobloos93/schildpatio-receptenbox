$contentwidth: 1000px;

body{
  margin: 0px;
  padding: 0px;
  background-image: image-url('wood-pattern.jpg');
  background-repeat: repeat-x repeat-y;
}

.topbar{
  height:75px;
  width:100%;
  background-color:white;
  float:left;
  margin-bottom:10px;

  .topbar-content{
    width: $contentwidth;
    margin:auto;

    .topbar-logo{
      width:75px;
      height:75px;
    }
  }
}

.content{
    background:white;
    border-radius:5px;
    width:$contentwidth;
    margin:auto;

}

body.recipe{

  .overview{
    background:white;
  }

  .recipename{
    padding-top: 25px;
    padding-bottom:20px;
    width:1000px;
    margin:auto;
    text-align:center;

    h1{
      color:white;
    }
  }

  .ingredients{
    background:red;
    height:100%;
    border-top-left-radius:5px;
    border-bottom-left-radius: 5px;

  }
}
